= form_for(@event) do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= pluralize(@event.errors.count, "error") + "prohibited this event from being saved:"
      %ul
        = @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    %br/
    = f.date_select :date, :start_year => Time.now.advance(:days => -7).year, :end_year => Time.now.year
    %br/
    = f.label :description
    %br/
    = f.text_field :description
  .actions
    = f.submit
